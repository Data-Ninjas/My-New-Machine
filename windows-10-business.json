{
  "variables": {
    "headless": "true",
    "disk_size": "204800",
    "iso_url": "en_windows_10_business_editions_version_1909_x64_dvd_ada535d0.iso",
    "iso_checksum": "798a68a8860c02d379a50d244dba6cefb32a90e966b3caa380c52b23e00f5e7f",
    "iso_checksum_type": "sha256"
  },
  "builders": [
    {
      "name": "windows-10-build1909",
      "type": "virtualbox-iso",
      "guest_os_type": "Windows2016_64",
      "guest_additions_mode": "attach",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "8192"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--vram", "64"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--nictype1", "82540EM"],
        ["modifyvm", "{{.Name}}", "--nictype2", "82540EM"],
        ["modifyvm", "{{.Name}}", "--nictype3", "82540EM"],
        ["modifyvm", "{{.Name}}", "--nictype4", "82540EM"]
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 0 /f /d p:4:1 /c \"Packer Shutdown\"",
      "floppy_files": [
        "Windows-10-Business/autounattend.xml",
        "Enable-PSRemoting.ps1",
        "win-updates.ps1",
        "microsoft-updates.bat"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": "Uninstall-WindowsFeature Windows-Defender"
    },
    {
      "type": "powershell",
      "script": "Install-VirtualBoxGuestAdditions.ps1"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "scripts": [
        "Install-Chocolatey.ps1",
        "Install-Boxstarter.ps1"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "scripts": [
        "Install-Common.ps1",
        "Install-DevTools.ps1",
        "Install-GitTools.ps1",
        "Install-SqlServer.ps1",
        "Install-VisualStudio2017.ps1",
        "Install-NodeTools.ps1",
        "Run-Cleanup.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ]
}
