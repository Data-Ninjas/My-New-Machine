{
  "variables": {
    "headless": "true",
    "disk_size": "204800",
    "iso_url": "en_windows_server_2019_x64_dvd_4cb967d8.iso",
    "iso_checksum": "2047F4E9FE2894F138395F3FAC037C007DD1493E",
    "iso_checksum_type": "sha1"
  },
  "builders": [
    {
      "name": "windows-2019",
      "type": "virtualbox-iso",
      "guest_os_type": "Windows2016_64",
      "guest_additions_mode": "attach",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "8192"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--vram", "64"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--nictype1", "82545EM"],
        ["modifyvm", "{{.Name}}", "--nictype2", "82545EM"],
        ["modifyvm", "{{.Name}}", "--nictype3", "82545EM"],
        ["modifyvm", "{{.Name}}", "--nictype4", "82545EM"]
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 0 /f /d p:4:1 /c \"Packer Shutdown\"",
      "floppy_files": [
        "Windows-2019/autounattend.xml",
        "Enable-PSRemoting.ps1",
        "Install-WindowsUpdates.ps1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": "Uninstall-WindowsFeature Windows-Defender"
    },
    {
      "type": "powershell",
      "script": "Install-VirtualBoxGuestAdditions.ps1"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "scripts": [
        "Install-Chocolatey.ps1",
        "Install-Boxstarter.ps1"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "scripts": [
        "Install-PowerShellProfile.ps1",
        "Install-Common.ps1",
        "Install-DevTools.ps1",
        "Install-GitTools.ps1",
        "Install-SqlServer.ps1",
        "Install-VisualStudio2019.ps1",
        "Install-NodeTools.ps1"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "scripts": [     
        "Finalize-VM.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ]
}
